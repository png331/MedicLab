<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :dob, style: "display: block" %>
    <%= form.date_field :dob, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username, class:"form-control" %>
  </div>
<% if !@user.persisted? %>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Password must be 6 characters minimum" %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %><br />
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"You must repeat Password" %>
  </div>

<% end %>
  <div class="form-group">
    <%= form.label :roles_id, style: "display: block" %>
    <%= form.collection_select :role_id, Role.order(:name),:id,:name, {:prompt => "Please select a Role", :selected => @user.role_id }, class:"form-control" %>
  </div>

  <div>
  <br/>
    <%= form.submit class:"btn btn-success mb-2" %>
  </div>
<% end %>
